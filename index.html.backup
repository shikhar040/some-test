    <script>
        // Sample Data
        const samplePosts = [
            {
                id: 1,
                type: 'social',
                author: {
                    name: 'Sarah Miller',
                    avatar: 'https://i.pravatar.cc/300?img=5',
                    title: 'UX Designer @ Apple'
                },
                time: '2h ago',
                content: 'Just finished an amazing weekend retreat with the team! ðŸ”ï¸ Nothing better than fresh mountain air and great company.',
                image: 'https://images.unsplash.com/photo-1542744094-3a31f272c490?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
                likes: 342,
                comments: 28,
                shares: 12,
                liked: false
            },
            {
                id: 2,
                type: 'professional',
                author: {
                    name: 'Michael Chen',
                    avatar: 'https://i.pravatar.cc/300?img=8',
                    title: 'Senior Architect @ AWS'
                },
                time: '5h ago',
                content: 'Just completed AWS Solutions Architect Professional certification! ðŸŽ¯ Ready to architect even more scalable solutions.',
                image: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
                likes: 892,
                comments: 45,
                shares: 32,
                liked: true
            }
        ];

        let currentMode = 'social';
        let currentFeed = 'social';
        let currentPostType = 'social';
        let currentProfileTab = 'social';
        let userPosts = JSON.parse(localStorage.getItem('userPosts')) || [];
        let selectedAvatar = null;
        let postImageData = null;

        // Initialize the app
        function initApp() {
            loadPosts();
            loadProfilePosts();
            loadSettings();
        }

        // Navigation
        function navigateTo(page) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            
            // Show selected page
            document.getElementById(`${page}-page`).classList.add('active');
            
            // Update active nav button
            const navBtn = document.querySelector(`.nav-btn[onclick*="${page}"]`);
            if (navBtn) {
                navBtn.classList.add('active');
            }
            
            // Update header title
            const titles = {
                'home': 'Feed',
                'create-post': 'Create Post',
                'profile': 'Profile',
                'messages': 'Messages',
                'notifications': 'Notifications',
                'settings': 'Settings'
            };
            document.querySelector('.page-title').textContent = titles[page];
        }

        // Set mode (Social/Professional)
        function setMode(mode) {
            currentMode = mode;
            document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`.mode-btn[onclick*="${mode}"]`).classList.add('active');
            
            // If on home page, update feed
            if (document.getElementById('home-page').classList.contains('active')) {
                setFeed(mode);
            }
        }

        // Set feed type
        function setFeed(feed) {
            currentFeed = feed;
            document.querySelectorAll('.feed-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`.feed-btn[onclick*="${feed}"]`).classList.add('active');
            loadPosts();
        }

        // Set post type for creation
        function setPostType(type) {
            currentPostType = type;
            document.querySelectorAll('.type-option').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`.type-option[onclick*="${type}"]`).classList.add('active');
        }

        // Set profile tab
        function setProfileTab(tab) {
            currentProfileTab = tab;
            document.querySelectorAll('.profile-tab').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`.profile-tab[onclick*="${tab}"]`).classList.add('active');
            
            // Show/hide content
            document.getElementById('social-posts').classList.toggle('hidden', tab !== 'social');
            document.getElementById('professional-posts').classList.toggle('hidden', tab !== 'professional');
        }

        // Load posts
        function loadPosts() {
            const postsContainer = document.getElementById('posts-container');
            const filteredPosts = [...samplePosts, ...userPosts].filter(post => post.type === currentFeed);
            
            postsContainer.innerHTML = '';
            
            if (filteredPosts.length === 0) {
                postsContainer.innerHTML = `
                    <div style="text-align: center; padding: 40px;">
                        <i class="far fa-newspaper" style="font-size: 48px; color: var(--text-secondary); margin-bottom: 16px;"></i>
                        <p style="color: var(--text-secondary);">No ${currentFeed} posts yet. Be the first to create one!</p>
                    </div>
                `;
                return;
            }
            
            filteredPosts.forEach(post => {
                const postElement = document.createElement('div');
                postElement.className = 'post-card';
                postElement.innerHTML = `
                    <div class="post-header">
                        <div class="post-avatar">
                            <img src="${post.author.avatar}" alt="${post.author.name}">
                        </div>
                        <div class="post-info">
                            <div class="post-author">${post.author.name}</div>
                            <div class="post-title">${post.author.title}</div>
                            <div class="post-meta">
                                <span class="post-time">${post.time}</span>
                                <span class="post-type">${post.type}</span>
                            </div>
                        </div>
                    </div>
                    <div class="post-content">
                        <p class="post-text">${post.content}</p>
                        ${post.image ? `<img src="${post.image}" alt="Post" class="post-image">` : ''}
                    </div>
                    <div class="post-actions">
                        <button class="post-action ${post.liked ? 'liked' : ''}" onclick="toggleLike(${post.id})">
                            <i class="fas fa-heart"></i>
                            <span>${post.likes}</span>
                        </button>
                        <button class="post-action">
                            <i class="far fa-comment"></i>
                            <span>${post.comments}</span>
                        </button>
                        <button class="post-action">
                            <i class="far fa-share-square"></i>
                            <span>${post.shares}</span>
                        </button>
                        ${post.type === 'professional' ? `
                            <button class="post-action">
                                <i class="fas fa-handshake"></i>
                                <span>Connect</span>
                            </button>
                        ` : ''}
                    </div>
                `;
                postsContainer.appendChild(postElement);
            });
        }

        // Load profile posts
        function loadProfilePosts() {
            const socialPostsContainer = document.getElementById('social-posts');
            const professionalPostsContainer = document.getElementById('professional-posts');
            
            const socialPosts = userPosts.filter(post => post.type === 'social');
            const professionalPosts = userPosts.filter(post => post.type === 'professional');
            
            // Update post count
            document.getElementById('profile-posts-count').textContent = userPosts.length + 128;
            
            // Load social posts
            socialPostsContainer.innerHTML = '';
            if (socialPosts.length === 0) {
                socialPostsContainer.innerHTML = `
                    <div style="text-align: center; padding: 40px; background: var(--dark-card); border-radius: var(--radius-md);">
                        <i class="far fa-newspaper" style="font-size: 48px; color: var(--text-secondary); margin-bottom: 16px;"></i>
                        <p style="color: var(--text-secondary);">No social posts yet. Create your first post!</p>
                    </div>
                `;
            } else {
                socialPosts.forEach(post => {
                    const postElement = document.createElement('div');
                    postElement.className = 'post-card';
                    postElement.innerHTML = `
                        <div class="post-header">
                            <div class="post-avatar">
                                <img src="${post.author.avatar}" alt="${post.author.name}">
                            </div>
                            <div class="post-info">
                                <div class="post-author">${post.author.name}</div>
                                <div class="post-title">${post.author.title}</div>
                                <div class="post-meta">
                                    <span class="post-time">${post.time}</span>
                                    <span class="post-type">${post.type}</span>
                                </div>
                            </div>
                        </div>
                        <div class="post-content">
                            <p class="post-text">${post.content}</p>
                            ${post.image ? `<img src="${post.image}" alt="Post" class="post-image">` : ''}
                        </div>
                    </div>
                    `;
                    socialPostsContainer.appendChild(postElement);
                });
            }
            
            // Load professional posts
            professionalPostsContainer.innerHTML = `
                <div style="background: var(--dark-card); border-radius: var(--radius-md); padding: 24px;">
                    <h3 style="margin-bottom: 16px;">Professional Achievements</h3>
                    <div style="display: flex; flex-direction: column; gap: 16px;">
                        <div style="display: flex; align-items: center; gap: 16px; padding: 16px; background: rgba(255,255,255,0.05); border-radius: var(--radius-md);">
                            <div style="width: 50px; height: 50px; background: var(--professional); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-certificate" style="font-size: 24px;"></i>
                            </div>
                            <div>
                                <div style="font-weight: 700; margin-bottom: 4px;">AWS Solutions Architect</div>
                                <div style="font-size: 14px; color: var(--text-secondary);">Professional certification in cloud architecture</div>
                                <div style="font-size: 12px; color: var(--text-secondary); margin-top: 4px;">Dec 2023</div>
                            </div>
                        </div>
                        <div style="display: flex; align-items: center; gap: 16px; padding: 16px; background: rgba(255,255,255,0.05); border-radius: var(--radius-md);">
                            <div style="width: 50px; height: 50px; background: var(--professional); border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-briefcase" style="font-size: 24px;"></i>
                            </div>
                            <div>
                                <div style="font-weight: 700; margin-bottom: 4px;">Senior Developer Promotion</div>
                                <div style="font-size: 14px; color: var(--text-secondary);">Promoted to Lead Developer at TechCorp</div>
                                <div style="font-size: 12px; color: var(--text-secondary); margin-top: 4px;">Nov 2023</div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        // Handle post image upload
        function handlePostImageUpload(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    postImageData = e.target.result;
                    const preview = document.getElementById('post-image-preview');
                    preview.src = postImageData;
                    preview.classList.add('show');
                };
                reader.readAsDataURL(file);
            }
        }

        // Create new post
        function createPost() {
            const content = document.getElementById('post-content').value.trim();
            if (!content && !postImageData) {
                alert('Please write something or upload an image before posting!');
                return;
            }
            
            const newPost = {
                id: Date.now(),
                type: currentPostType,
                author: {
                    name: document.getElementById('profile-name').textContent,
                    avatar: document.getElementById('profile-avatar').src,
                    title: document.getElementById('profile-title').textContent
                },
                time: 'Just now',
                content: content,
                image: postImageData || (currentPostType === 'social' 
                    ? 'https://images.unsplash.com/photo-1542744094-3a31f272c490?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
                    : 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'),
                likes: 0,
                comments: 0,
                shares: 0,
                liked: false
            };
            
            userPosts.unshift(newPost);
            localStorage.setItem('userPosts', JSON.stringify(userPosts));
            
            // Clear input and preview
            document.getElementById('post-content').value = '';
            document.getElementById('post-image-preview').classList.remove('show');
            postImageData = null;
            
            // Navigate to home and reload posts
            navigateTo('home');
            loadPosts();
            loadProfilePosts();
            
            alert('Post created successfully!');
        }

        // Toggle like on post
        function toggleLike(postId) {
            const post = [...samplePosts, ...userPosts].find(p => p.id === postId);
            if (post) {
                post.liked = !post.liked;
                post.likes += post.liked ? 1 : -1;
                localStorage.setItem('userPosts', JSON.stringify(userPosts));
                loadPosts();
            }
        }

        // Edit profile functions
        function openEditProfile() {
            document.getElementById('edit-profile-modal').classList.add('active');
        }

        function closeEditProfile() {
            document.getElementById('edit-profile-modal').classList.remove('active');
        }

        function saveProfile() {
            const name = document.getElementById('edit-name').value;
            const title = document.getElementById('edit-title').value;
            const bio = document.getElementById('edit-bio').value;
            const location = document.getElementById('edit-location').value;
            
            // Update profile display
            document.getElementById('profile-name').textContent = name;
            document.getElementById('profile-title').textContent = title;
            document.getElementById('profile-location').textContent = location;
            
            // Update author info in user posts
            userPosts.forEach(post => {
                post.author.name = name;
                post.author.title = title;
            });
            localStorage.setItem('userPosts', JSON.stringify(userPosts));
            
            closeEditProfile();
            alert('Profile updated successfully!');
        }

        // Avatar functions
        function openChangeAvatar() {
            selectedAvatar = null;
            document.getElementById('avatar-preview').style.display = 'none';
            document.getElementById('change-avatar-modal').classList.add('active');
        }

        function closeChangeAvatar() {
            document.getElementById('change-avatar-modal').classList.remove('active');
        }

        function handleAvatarUpload(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    selectedAvatar = e.target.result;
                    const preview = document.getElementById('avatar-preview');
                    preview.src = selectedAvatar;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        function selectDefaultAvatar(imgNum) {
            selectedAvatar = `https://i.pravatar.cc/300?img=${imgNum}`;
            const preview = document.getElementById('avatar-preview');
            preview.src = selectedAvatar;
            preview.style.display = 'block';
        }

        function saveAvatar() {
            if (!selectedAvatar) {
                alert('Please select or upload an avatar!');
                return;
            }
            
            // Update avatar in all places
            document.getElementById('profile-avatar').src = selectedAvatar;
            document.getElementById('header-avatar').src = selectedAvatar;
            
            // Update avatar in user posts
            userPosts.forEach(post => {
                post.author.avatar = selectedAvatar;
            });
            localStorage.setItem('userPosts', JSON.stringify(userPosts));
            
            closeChangeAvatar();
            alert('Profile picture updated successfully!');
        }

        // Password functions
        function openChangePassword() {
            document.getElementById('change-password-modal').classList.add('active');
        }

        function closeChangePassword() {
            document.getElementById('change-password-modal').classList.remove('active');
        }

        function savePassword() {
            const currentPass = document.getElementById('current-password').value;
            const newPass = document.getElementById('new-password').value;
            const confirmPass = document.getElementById('confirm-password').value;
            
            if (!currentPass || !newPass || !confirmPass) {
                alert('Please fill all password fields!');
                return;
            }
            
            if (newPass !== confirmPass) {
                alert('New passwords do not match!');
                return;
            }
            
            if (newPass.length < 6) {
                alert('Password must be at least 6 characters!');
                return;
            }
            
            // In a real app, this would send to server
            closeChangePassword();
            document.getElementById('current-password').value = '';
            document.getElementById('new-password').value = '';
            document.getElementById('confirm-password').value = '';
            alert('Password changed successfully!');
        }

        // Settings functions
        function loadSettings() {
            // Load saved settings from localStorage
            const savedSettings = JSON.parse(localStorage.getItem('userSettings')) || {};
            
            // Apply settings
            if (savedSettings.emailNotifications !== undefined) {
                document.getElementById('email-notifications').checked = savedSettings.emailNotifications;
            }
            if (savedSettings.pushNotifications !== undefined) {
                document.getElementById('push-notifications').checked = savedSettings.pushNotifications;
            }
            if (savedSettings.socialPrivacy) {
                document.querySelector(`input[name="social-privacy"][value="${savedSettings.socialPrivacy}"]`).checked = true;
            }
            if (savedSettings.professionalPrivacy) {
                document.querySelector(`input[name="professional-privacy"][value="${savedSettings.professionalPrivacy}"]`).checked = true;
            }
        }

        function saveSettings() {
            const settings = {
                emailNotifications: document.getElementById('email-notifications').checked,
                pushNotifications: document.getElementById('push-notifications').checked,
                socialPrivacy: document.querySelector('input[name="social-privacy"]:checked').value,
                professionalPrivacy: document.querySelector('input[name="professional-privacy"]:checked').value
            };
            
            localStorage.setItem('userSettings', JSON.stringify(settings));
            alert('Settings saved!');
        }

        // Save settings when toggles change
        document.getElementById('email-notifications').addEventListener('change', saveSettings);
        document.getElementById('push-notifications').addEventListener('change', saveSettings);
        document.querySelectorAll('input[name="social-privacy"]').forEach(input => {
            input.addEventListener('change', saveSettings);
        });
        document.querySelectorAll('input[name="professional-privacy"]').forEach(input => {
            input.addEventListener('change', saveSettings);
        });

        // Account functions
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                alert('Logged out successfully!');
                // In a real app, this would clear session and redirect to login
            }
        }

        function deleteAccount() {
            if (confirm('Are you sure you want to delete your account? This action cannot be undone!')) {
                if (prompt('Type "DELETE" to confirm:') === 'DELETE') {
                    alert('Account deleted successfully!');
                    // In a real app, this would delete from server
                }
            }
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            navigateTo('notifications');
        }

        // Open chat
        function openChat(chatId) {
            alert(`Opening chat ${chatId}...`);
            // In a real app, this would open the chat interface
        }

        // Initialize the app when page loads
        window.onload = initApp;
    </script>
</body>
</html>
